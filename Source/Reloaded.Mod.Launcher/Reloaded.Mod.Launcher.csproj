    <Resource Include="Assets\Images\Info-Icon.png" />
    <Resource Include="Assets\Images\Mods-Icon.png" />
    <Resource Include="Assets\Images\Reloaded-No-Brackets.png" />
    <Resource Include="Assets\Images\Search-Icon.png" />
